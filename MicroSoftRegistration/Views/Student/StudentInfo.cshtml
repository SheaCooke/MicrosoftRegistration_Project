@{
}
@model List<Student>

<div class="center">
    <form method="post" asp-controller="Student" asp-action="Results">
        <input type="text" placeholder="Enter student first or last name." name="searchTerm" />
        <input type="submit" class="btn btn-primary" value="Search">
    </form>
</div>
<br />
<br />




@if (Model.Count == 0)
            {
                <p class="centerAndBlue">No records yet...</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Student ID</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Career Path</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                             {
                                <tr>
                                    <td>@i.StudentID</td>
                                    <td>@i.FName</td>
                                    <td>@i.LName</td>
                                    <td>@i.CareerPath</td>
                                    <td><a asp-controller="User" asp-action="Edit" asp-route-id="@i.StudentID">|Edit</a></td>
                                    <td><a href="/User/Delete/@i.StudentID">|Delete</a></td>
                                </tr>

                             }
                    </tbody>
               
                
                
                </table>




            }
