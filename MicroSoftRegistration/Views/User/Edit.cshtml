@{
}
@using MicroSoftRegistration.ViewModels
@model RegisterUserViewModel



<h3 class="centerAndBlue">Edit Student Information</h3>

<form method="post">

    <input type="hidden" value="@ViewBag.Student.StudentID" name="id" />

    <div>
        <label asp-for="FName">First Name</label>
        <input asp-for="FName" type="text" value="@ViewBag.Student.FName" />
        <span asp-validation-for="FName"></span>
    </div>


    <div>
        <label asp-for="LName">Last Name</label>
        <input asp-for="LName" type="text" value="@ViewBag.Student.LName" />
        <span asp-validation-for="LName"></span>
    </div>

    <div>
        <label asp-for="CareerPath">Career Paths</label>
        <select asp-for="CareerPath" asp-items="Model.CareerPathList"></select>
        <span asp-validation-for="CareerPath"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Edit">
    <a asp-controller="Student" asp-action="StudentInfo" class="btn btn-success" role="button">Go Back</a>





</form>
